#	automake -c --add-missing
    
#missing: $(miscfiles)
#	automake -c --add-missing
    
#COPYING: $(miscfiles)
#	automake -c --add-missing
    
#depcomp: $(miscfiles)
#	automake -c --add-missing

#INSTALL: $(miscfiles)
#	automake -c --add-missing

# empty files
NEWS:
	touch NEWS

README:
	touch README

AUTHORS:
	touch AUTHORS

ChangeLog:
	touch ChangeLog




